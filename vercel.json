{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "css/**/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "styles.css",
      "use": "@vercel/static"
    },
    {
      "src": "js/**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "img/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "imagen/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "portfolio/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "guias/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "user-dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "user-dashboard/dist"
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/dashboard", "destination": "/user-dashboard/index.html" },
    { "source": "/dashboard/(.*)", "destination": "/user-dashboard/$1" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/script.js", "dest": "/script.js" },
    { "src": "/styles.css", "dest": "/styles.css" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/dashboard-ts/(.*)", "dest": "/dashboard-ts/$1" },
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/img/(.*)", "dest": "/img/$1" },
    { "src": "/imagen/(.*)", "dest": "/imagen/$1" },
    { "src": "/portfolio/(.*)", "dest": "/portfolio/$1" },
    { "src": "/guias/(.*)", "dest": "/guias/$1" },
    { "src": "/(.*)\\.html", "dest": "/$1.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
